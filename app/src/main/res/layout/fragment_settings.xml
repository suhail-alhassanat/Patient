<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ui.SettingsFragment">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:src="@drawable/groop"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_settings_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/settings_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/txt_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Settings"
        android:fontFamily="@font/roboto"
        android:textSize="16sp"
        android:textColor="@color/text_color"
        app:layout_constraintBottom_toBottomOf="@+id/img_settings_icon"
        app:layout_constraintStart_toEndOf="@+id/img_settings_icon"
        app:layout_constraintTop_toTopOf="@+id/img_settings_icon" />


    <ImageView
        android:id="@+id/img_location_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/location_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_settings_icon" />

    <TextView
        android:id="@+id/txt_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Clinic Location"
        android:fontFamily="@font/roboto"
        android:textSize="16sp"
        android:textColor="@color/text_color"
        app:layout_constraintBottom_toBottomOf="@+id/img_location_icon"
        app:layout_constraintStart_toEndOf="@+id/img_location_icon"
        app:layout_constraintTop_toTopOf="@+id/img_location_icon" />


    <ImageView
        android:id="@+id/img_sign_out_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/logout_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_location_icon" />

    <TextView
        android:id="@+id/txt_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/roboto"
        android:text="Sign out"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_sign_out_icon"
        app:layout_constraintStart_toEndOf="@+id/img_sign_out_icon"
        app:layout_constraintTop_toTopOf="@+id/img_sign_out_icon" />


</androidx.constraintlayout.widget.ConstraintLayout>